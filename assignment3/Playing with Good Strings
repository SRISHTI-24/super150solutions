#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int main() {
	string rk;
	cin>>rk;
	int f=0,s=1,c=0,max=0;
	for(int i=0;i<rk.size();i++)
	{
		if(rk[i]=='a'||rk[i]=='e'||rk[i]=='i'||rk[i]=='o'||rk[i]=='u')
		{
			c++;
			if(c>max)
			{
				max=c;
			}
		}
		else
		{
			c=0;
		}
		
	}
	cout<<max;
	return 0;
}
